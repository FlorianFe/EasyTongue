{
  "name": "EasyTongue",
  "version": "1.0.0",
  "description": "a menubar app for easy language translation",
  "main": "main.js",
  "scripts": {
    "start": "ELECTRON_ENABLE_LOGGING=1 electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build":
  {
    "appId": "de.florianfe.easytongue",
    "mac":
    {
      "category": "public.app-category.utilities",
      "icon": "easy-tongue-icon@2x"
    },
    "win":
    {
      "icon": "easy-tongue-icon@2x"
    }
  },
  "repository": "https://github.com/FlorianFe/EasyTongue",
  "keywords": [
    "translation",
    "polymer",
    "electron"
  ],
  "author": "Florian Fechner",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^1.4.1"
  },
  "dependencies": {
    "auto-launch": "^5.0.1",
    "electron-localshortcut": "^1.1.0",
    "ipc": "0.0.1",
    "menubar": "^5.2.3",
    "path": "^0.12.7"
  }
}
